<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.objectName.ObjectName"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <Button
        android:id="@+id/objectNameBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go"
        android:textSize="24sp"
        />

    <ImageView
        android:id="@+id/objectImage"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/cam"
        />


    <TextView
        android:id="@+id/objectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Object Name will appear here"
        android:textColor="#000000"
        android:textSize="24sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/objectTranslation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Object Name translation here"
        android:textColor="#000000"
        android:textSize="24sp"
        android:gravity="center"
        />


</LinearLayout>