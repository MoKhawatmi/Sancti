<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/recylcer_highlight_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/recylcer_highlight_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/recylcer_highlight_image"
        />

    <TextView
        android:id="@+id/recylcer_highlight_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/recylcer_highlight_image"
        android:layout_below="@id/recylcer_highlight_title"
        />

</RelativeLayout>