<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:background="@drawable/rounded_corners_shape"
    android:layout_margin="10dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            >


            <TextView
                android:id="@+id/favFlightName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textColor="#000000"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/favDepTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/favFlightName"
                android:textColor="#000000"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/favAirLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/favDepTime"
                android:textColor="#000000"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/favFlightTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="flight time"
                android:layout_below="@id/favAirLine"
                android:textColor="#000000"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/favFlightDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="flight destination"
                android:layout_below="@id/favFlightTime"
                android:textColor="#000000"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/favFlightPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 JOD"
                android:layout_below="@id/favFlightDestination"
                android:textColor="#000000"
                android:textStyle="bold"
                />




        </RelativeLayout>

            <Button
                android:id="@+id/removeFlightFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remove_fav"
                android:textStyle="bold"
                android:textColor="#910C0C"
                android:background="@drawable/fav_button"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>